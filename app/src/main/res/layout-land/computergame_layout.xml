<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:id="@+id/layout">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/grand_hotel"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:id="@+id/player1name"/>
            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/grand_hotel"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:id="@+id/score1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/grand_hotel"
                android:layout_gravity="center_horizontal"
                android:text="Computer"
                android:textColor="@android:color/white"
                android:id="@+id/player2name"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/grand_hotel"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:id="@+id/score2"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:fontFamily="@font/grand_hotel"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
        android:id="@+id/current_round"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp">
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:src="@drawable/rock"
            android:scaleType="centerInside"
            android:background="@android:color/background_dark"
            android:padding="0dp"
            android:id="@+id/rock_button"
            android:onClick="onclickrock"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:src="@drawable/paper"
            android:scaleType="centerInside"
            android:background="@android:color/background_dark"
            android:padding="0dp"
            android:id="@+id/paper_button"
            android:onClick="onclickpaper"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/scissor"
            android:scaleType="centerInside"
            android:background="@android:color/background_dark"
            android:padding="0dp"
            android:layout_height="100dp"
            android:id="@+id/scissor_button"
            android:onClick="onclickscissor"/>
    </LinearLayout>
</LinearLayout>